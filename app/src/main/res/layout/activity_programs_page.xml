<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andrey.mathinformer.ProgramsPage">

    <Button
        android:id="@+id/go_to_crypter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/main_button"
        android:text="@string/programs.crypter"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <Button
        android:id="@+id/go_to_converter_numeration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/main_button"
        android:text="@string/programs.converter"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <Button
        android:id="@+id/go_to_root_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/main_button"
        android:text="@string/programs.rootSearch"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <Button
        android:id="@+id/go_to_physical_converter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/main_button"
        android:text="@string/programs.physicalConverter"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp" />

</LinearLayout>
